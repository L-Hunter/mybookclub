<div class="container">
	<h2 class="text-center title-highlight">Current Reads</h2>
	<h4 class="text-center title-highlight">See what other clubs are reading.</h4>

	<div>
		<% @books.each do |book| %>
			<div class="row all-books-display">
				<div class="col-sm-2"></div>
				<div class="col-sm-2">
					<%= image_tag book.image %>
				</div>
				<div class="col-sm-6">	
					<span class="highlight"><%= book.title %> by <%= book.author %></span><br>
					<%= book.description %>
				</div>
				<div class="col-sm-2"></div>
			</div>
		<% end %>
	</div>
</div>