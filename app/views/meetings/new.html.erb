
<h1>Schedule a Book Club Meeting</h1>

<div>
	<%= form_for [@club, @meeting] do |f| %>
	  <%= f.hidden_field :club_id, value: @club.id %>
 		<p>Search for a book</p>
 		<select id="booksearch">
		  <option value="none" selected="selected">Search for a book</option>
		</select>
	  
	  <div id="book-preview" class="row">
	  	<div class="col-lg-2" id="book-preview-thumb">
	  	</div>
	  	<div class="col-lg-4 book-meta">
	  		<div>
	  			<span>Title: </span><span id="book-meta-title"></span>
	  		</div>
	  		<div>
	  			<span>Author: </span><span id="book-meta-author"></span>
	  		</div>
	  	</div>
	  </div>

<!-- 	  <div id="hidden-book-fields"> -->

	  	<%= f.fields_for :book, Book.new do |ff| %>
  			<div>
    			<%= ff.label :title %>
    			<%= ff.text_field :title, :id => "book-title" %>
  			</div>

  			<div>
    			<%= ff.label :author %>
    			<%= ff.text_field :author, :id => "book-author" %>
  			</div>
  			<div>
    			<%= ff.label :image %>
    			<%= ff.text_field :image, :id => "book-image" %>
  			</div>

  			<div>
    			<%= ff.label :description %>
    			<%= ff.text_field :description, :id => "book-description" %>
  			</div>
		<% end %>
<!-- 	  </div> -->


	  <div class="field">
	    <%= f.label :date, value: "Meeting Date: " %><br />
	    <%= f.text_field :date, autofocus: true %>
	  </div>

	  <div class="field">
	    <%= f.label :time, value: "Time: " %><br />
	    <%= f.text_field :time, autofocus: true %>
	  </div>

	  <div class="field">
	    <%= f.label :host, value: "Host: " %><br>
	    <%= f.text_field :host, autofocus: true %>
	  </div>

	  <div class="field">  
	    <%= f.label :street, value: "Street Address: " %><br />
	    <%= f.text_field :street, autofocus: true %>
	  </div>

	  <div class="field">
	    <%= f.label :city, value: "City: " %><br>
	    <%= f.text_field :city, autofocus: true %>
	  </div>

	  <div class="field">
	    <%= f.label :state, value: "State: " %><br>
	    <%= f.text_field :state, autofocus: true %>
	  </div>

	  <div class="field">
	    <%= f.label :zip, value: "Zipcode: " %><br>
	    <%= f.text_field :zip, autofocus: true %>
	  </div>

	  <div class="field">
	    <%= f.label :comment, value: "Comments: " %><br>
	    <%= f.text_field :comment, autofocus: true %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Schedule Meeting" %>
	  </div>
	<% end %>
</div>
