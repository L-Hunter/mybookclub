<h2>Meeting Information</h2>

<div class="row">
	<div class="col-sm-6">
		<p>When: <%= @meeting.date %> at <%= @meeting.time %><br>
		Host: <%= @meeting.host %><br>
		<%= @meeting.street %><br>
		<%= @meeting.city %>, <%= @meeting.state %> <%= @meeting.zip %><br>
		Comments: <%= @meeting.comment%><br>
		Club Id <%= @meeting.club_id%>
		</p>
		<div class="row">
			<div class="col-sm-2">
				<%= button_to "Edit Meeting", edit_club_meeting_path, :method => "get" %>		
			</div>
			<div class="col-sm-7">
				<%= button_to "View Club", club_path(@meeting.club_id), :method => "get" %>
			</div>
			<div class="col-sm-3">
				<%= button_to "Delete This Meeting", [@club, @meeting], method: :delete, data: { confirm: "Are you sure you want to delete this meeting?" } %>	
			</div>
		</div>
	</div>
	<div class="col-sm-6 row">
		<div class="col-sm-2"><%= image_tag @meeting.choice.book.image %></div>
		<div class="col-sm-10"><h3><%= @meeting.choice.book.title %> by <%= @meeting.choice.book.author %></h3>
		<p><%= @meeting.choice.book.description %>	</p></div>
	</div>
</div>
