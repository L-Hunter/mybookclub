<div class="container bigger-font">
	<h2 class="text-center title-highlight">Meeting Information</h2>

	<div class="row">
		<div class="col-sm-6">
			<h3 class="highlight">When: <%= @meeting.date %> at <%= @meeting.time %></h3>
			<p><%= @meeting.host %><br>
			<%= @meeting.street %><br>
			<%= @meeting.city %>, <%= @meeting.state %> <%= @meeting.zip %></p>
			<p><%= @meeting.comment%></p>
			<p>This is a meeting of <%= link_to @club.club_name, club_path(@meeting.club_id) %></p>
			Club Id <%= @meeting.club_id%>
			<div class="row">
				<div class="col-sm-6">
					<%= button_to "Edit Meeting", edit_club_meeting_path, :method => "get" %>		
				</div>
				<div class="col-sm-6">
					<%= button_to "Delete This Meeting", [@club, @meeting], method: :delete, data: { confirm: "Are you sure you want to delete this meeting?" } %>	
				</div>
			</div>
		</div>
		<div class="col-sm-6">
			<% if @meeting.choice %>
<!-- 				<div class="col-sm-2">
						
				</div>
				<div class="col-sm-10"> -->
					<h3 class="highlight"><%= @meeting.choice.book.title %> by <%= @meeting.choice.book.author %></h3>
					<p><%= image_tag @meeting.choice.book.image, class: "pull-left margin-bottom gap-right" %><%= @meeting.choice.book.description %></p>
<!-- 				</div> -->
			<% else %>
<!-- 				<div class="col-sm-12"> -->
					There is currently no book selection for this meeting.
<!-- 				</div> -->
			<% end %>
		</div>
	</div>
</div>
